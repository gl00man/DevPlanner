<Window x:Class="DevPlanner.ApiWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DevPlanner"
        mc:Ignorable="d"
        Title="ApiWindow" Height="250" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Api key's path" FontSize="13" Margin="45 5 0 0"/>
            <TextBox x:Name="pathTxt" Width="300" Height="25" Margin="0 0 0 0"/>
            <Button x:Name="BrowseBtn" Content="Browse" Width="75" Height="25" Margin="0 10 0 0" Click="BrowseBtn_Click"/>
            <TextBlock Text="Sheet Name" FontSize="13" Margin="45 0 0 0"/>
            <TextBox x:Name="sheetNameTxt" Width="300" Height="25" Margin="0 0 0 0"/>
            <TextBlock Text="Sheet Id" FontSize="13" Margin="45 0 0 0"/>
            <TextBox x:Name="sheetIdTxt" Width="300" Height="25" Margin="0 0 0 0"/>
            <Button x:Name="saveApiBtn" Content="Save" Width="75" Height="25" Margin="0 10 0 0" Click="saveApiBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
